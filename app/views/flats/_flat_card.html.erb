<div class="rounded-lg overflow-hidden w-[25rem] h-[25rem] bg-slate-200 shadow-md flex flex-col justify-between">
  <div class="w-full h-2/3 bg-cover bg-center" style="background-image: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200')">
  </div>

  <div class="p-3 flex flex-col gap-2 h-1/2">
    <%= link_to flat.name, flat_path(flat), class: 'text-2xl font-bold' %>
    <p class="text-sm"><%= flat.address %></p>
    <div class="flex gap-2">
      <div class="flex items-center gap-1">
        <i class="fa-solid fa-people-line"></i>
        <%= flat.number_of_guests %>
      </div>
      <div class="flex items-center gap-1">
        <i class="fa-solid fa-euro-sign"></i>
        <%= flat.price_per_night %>
      </div>
    </div>
  </div>

  <div class="h-fit p-4 flex justify-between items-center bg-slate-50">
    <%= link_to 'More info', flat_path(flat), class: 'bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600' %>
    <%= link_to 'Edit', edit_flat_path(flat), class: 'bg-yellow-500 text-white px-4 py-2 rounded-md hover:bg-yellow-600' %>
    <%= link_to 'Delete', flat_path(flat), class: 'bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  </div>
</div>
