<%= simple_form_for @flat do |f| %>
  <%= f.input :name, input_html: { class: "flex flex-col mb-4" } %>
  <%= f.input :address, input_html: { class: "flex flex-col mb-4" } %>
  <%= f.input :number_of_guests, input_html: { class: "flex flex-col mb-4" } %>
  <%= f.input :price_per_night, input_html: { class: "flex flex-col mb-4" } %>
  <%= f.button :submit, class: "bg-green-500 text-white p-2 rounded-md hover:bg-green-600" %>
<% end %>